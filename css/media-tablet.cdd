@media only screen and (min-width: 1024px) {
  /* Estilos para una pantalla de 1024px */
  body {
    font-size: 18px;
  }
  h1 {
    /* font-size: 36px; */
  }
  h2 {
    font-size: 32px;
  }
  h3 {
    font-size: 28px;
  }
  h4 {
    font-size: 24px;
  }
  h5 {
    font-size: 20px;
  }
  h6 {
    font-size: 16px;
  }
  p {
    font-size: 16px;
    line-height: 1.5;
  }
  a {
    font-size: 16px;
  }
}
